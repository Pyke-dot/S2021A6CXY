@model S2021A6CXY.Models.TrackWithDetailViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete track @Model.Name</h2>

<h3>Are you sure you want to delete this track?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal ">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
            <hr />
        </dd>

        <dt class="col-md-7">
            @Html.DisplayNameFor(model => model.Composers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composers)
            <hr />
        </dd>
        <dt>
            Sample Clip
        </dt>
        <dd>
            <audio src="/clip/@Model.Id" controls="controls"></audio>
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
            <hr />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
